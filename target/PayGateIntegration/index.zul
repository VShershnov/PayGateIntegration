<zk xmlns:ca="client/attribute">
	<style src="/widgets/effects/form_effect/styles.css"/>    
	<window apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('com.vshershnov.PayGateIntegration.TransactionViewModel')"
		validationMessages="@id('vmsgs')">
		
		<vlayout spacing="7px">
			 <label value="Pay Gate Transaction Sale Info" style="font-size:16px;font-weight:bold;" />
			 
			<hlayout spacing="20px" valign="middle"> 
				<label class="name" value="Card Number: "/>				
	    		<textbox id="cardNumber" width='150px' value = "@save(vm.cardNumber) @validator('beanValidator')"/>
	    		<label value="@load(vmsgs[cardNumber])"/>
	 
	    	</hlayout>	    	
	    	<hlayout spacing="20px" valign="middle"> 
				<label class="name" value="Exp Date: "/>				
	    		<textbox id="expDate" width='150px' value = "@save(vm.expDate)"/>
	    	
	    	</hlayout>	    	
	    	<hlayout spacing="20px" valign="middle"> 
				<label class="name" value="CSC Code: "/>				
	    		<textbox id="cscCode" width='150px' value = "@save(vm.cscCode)"/>
	    	
	    	</hlayout>	    	
	    	<hlayout spacing="20px" valign="middle"> 
				<label class="name" value="Amount: "/>				
	    		<textbox id="amount" width='150px' value = "@save(vm.amount)"/>
	    	
	    	</hlayout>
	    	
	    	<hlayout spacing="20px" valign="middle"> 
				<label class="name" value="Holder Name: "/>				
	    		<textbox id="holderName" width='150px' value = "@save(vm.holderName)" />
	    	
	    	</hlayout>
	    	
	    	<hlayout spacing="20px" valign="middle"> 
				<label class="name" value="Street: "/>				
	    		<textbox id="street" width='150px' value = "@save(vm.street)"/>
	    	
	    	</hlayout>
	    	
	    	<hlayout spacing="20px" valign="middle"> 
				<label class="name" value="City: "/>				
	    		<textbox id="city" width='150px' value = "@save(vm.city)"/>
	    	
	    	</hlayout>
	    	
	    	<hlayout spacing="20px" valign="middle"> 
				<label class="name" value="State: "/>				
	    		<textbox id="state" width='150px' value = "@save(vm.state)"/>
	    	
	    	</hlayout>
	    	
	    	<hlayout spacing="20px" valign="middle"> 
				<label class="name" value="ZipCode: "/>				
	    		<textbox id="zipCode" width='150px' value = "@save(vm.zipCode)"/>
	    	
	    	</hlayout>
	    	
	    	<hlayout>today is <label value="@load(vm.answer)" /></hlayout>		
			<button label="Submit" onClick="@command('cmd')"/>
		</vlayout>		
		
	</window>
</zk>